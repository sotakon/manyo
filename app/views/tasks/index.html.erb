<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>名前</th>
    <th>詳細</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>
<% @tasks.each do |task| %>
  <tr class="task_list">
    <td><%= task.name %></td>
    <td><%= task.details %></td>
    <td><%= task.limit %></td>
    <td><%= task.stutas %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくタスクを投稿する', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>