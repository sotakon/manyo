<%= form_with(model: [:admin,@user], local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  アカウント権限：<%= f.select :admin, { 一般: false, 管理者: true } %>
  <%= f.submit "Edit my account" %>
<% end %>
